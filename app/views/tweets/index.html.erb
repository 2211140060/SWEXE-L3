<h1>ツイート一覧</h1>

<% if flash[:alert] %>
  <div><%= flash[:alert] %></div>
<% end %>

<% if flash[:notice] %>
  <div><%= flash[:notice] %></div>
<% end %>

<%= link_to '新しいツイート', new_tweet_path %>

<ul>
  <% @tweets.each do |tweet| %>
    <li>
      <strong><%= tweet.message %></strong>
      <span>(<%= time_ago_in_words(tweet.tdate) %>前)</span>
      <%= link_to '編集', edit_tweet_path(tweet) %>
      <%= link_to '削除', tweet_path(tweet), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </li>
  <% end %>
</ul>
